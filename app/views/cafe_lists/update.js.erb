// モーダルを閉じる処理
$("#cafe_listModal").modal("hide");
$('body').removeClass('modal-open');
$('.modal-backdrop').remove();


// Rails @status => true 画面の書き換え : false モーダルを再度表示
// <% if @status %>
$('[data-model_name="cafe_list"]').filter('[data-id="<%= @cafe_list.id %>"]').replaceWith("<%= j(render @cafe_list) %>");

// <% else %>
$("#modalArea").html("<%= j(render 'form', cafe_list: @cafe_list) %>")
$("#modalArea").find(".modal").modal('show')
// <% end %>