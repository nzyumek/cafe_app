$("#cafe_listsIndex").append("<%= j(render @cafe_list) %>");

// <% else %>
$("#modalArea").html("<%= j(render 'cafe_lists/form', cafe_list: @cafe_list) %>")
$("#modalArea").find(".modal").modal('show')
