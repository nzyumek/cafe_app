<!--バナー写真-->
<section class="conA">
    <div class="bgImg src1"></div>
    <div class="bgImg src2"></div>
    <div class="bgImg src3"></div>
    <div class="bgImg src4"></div>
    <div class="logoh">
      <%= image_tag 'mak_logo.png', class: 'logo' %>
      <h1>KOFFIERS</h1>
      <p>カフェ検索サイト</p>

          <%= form_with(url: cafe_lists_path, model: @cafe_list, local: true, method: :get, class: "form-inline") do |f| %>
            <%= f.text_field :title ,class: "form-control mr-sm-2", 
            placeholder: "店名、場所を入力"%><%#= autocomplete_field_tag 'cafe_list[title]', nil,  autocomplete_cafe_list_title_users_path %>
            <%= f.submit 'Search', :name => nil , class: "btn btn-outline-success"%>
          <% end %>

    </div>
</section>



<section class="conB">
  <div class="conB-A">
    <div class="container pt-5 pb-3">
      <div class="text">
        <h2>KOFFIERSとは</h2>
        <pre>カフェを検索したいとき、特別な一杯を飲みたいとき、簡単に検索できるサイトです。</pre>
        <a href="about">About</a>
      </div>
    </div>
  </div>
<!--おすすめカフェ　カード-->
<!--ループ書く-->



  <div class="conB-B">
    <div class="container pt-3 pb-3">
      <h3>あなたにぴったりのカフェ</h3>
      <div class="row row-eq-height home-card-height">
        <% @cafe_lists_card.each do |cafe_list| %>
          <div class="col-md-4 mb-3">
            <div class="card">
              <a href="cafe_lists/<%= cafe_list.id %>">
                <% if cafe_list.cafe_list_images.blank? %>
                  <%= image_tag 'https://chugakujuken.net/wp-content/uploads/2018/12/noimage.png', :width => '348', :height => 'auto' , :class => 'thumbnail' %>
                <% else %>
                  <%= image_tag cafe_list.cafe_list_images[0].variant(resize_to_limit: [348, 400]), :class => 'thumbnail' %>
                <% end %>
              </a>
              <div class="card-body">
                <a href="cafe_lists/<%= cafe_list.id %>">
                  <h5 class="card-title text-dark"><%= cafe_list.title %></h5>
                </a>
                <p class="card-text line-clamp"><%= cafe_list.info %></p>
                <a href="cafe_lists/<%= cafe_list.id %>" class="text-dark">More</a>
              </div>
            </div>
          </div>
        <% end %>     
      </div>
      <a href="cafe_lists">もっと見る</a>
    </div>
  </div>
</section>  