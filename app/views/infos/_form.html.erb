<%= form_with(model: info, url: [cafe_list, info], remote: true, html: {name: "infoForm", class: "p-2"} ) do |form| %>
  <% if info.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(info.errors.count, "error") %> prohibited this info from being saved:</h2>
      <ul>
        <% info.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.text_area :content, rows: 4 %>
  </div>
  <div class="actions text-right">
    <%= link_to "Close", new_cafe_list_info_path(cafe_list), class: "btn btn-secondary", remote: true %>
    <%= form.submit %>
  </div>
<% end %>
